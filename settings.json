{
    "gitlens.advanced.messages": {
        "suppressGitVersionWarning": true
    },
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "typescript.validate.enable": false,
    "window.zoomLevel": 0,
    "files.associations": {
        "*.js": "typescriptreact",
        "*.jsx": "typescriptreact",
        "*.erb": "erb"
    },
    "vsicons.dontShowNewVersionMessage": true,

    // these doesn't seem to work
    "typescriptreact.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBrackets": false,
    "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBrackets": false,
    "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBrackets": false,


    /* ----------- editor ----------- */
    "editor.fontSize": 13,
    // "editor.fontFamily": "monaco",
    // "editor.fontFamily": "consolas",
    // "editor.fontFamily": "Fira Code",
    // "editor.fontFamily": "FiraCode-Retina",
    // "editor.fontFamily": "Inconsolata",
    // "editor.fontFamily": "ubuntu mono",
    // "editor.fontFamily": "source code pro",
    // "editor.fontFamily": "mononoki",
    // "editor.fontFamily": "Operator Mono Lig",
    "editor.fontFamily": "Operator Mono SSm Lig",
    "editor.fontLigatures": true,
    "editor.wordWrap": "on",
    "editor.showFoldingControls": "always",
    "editor.tabSize": 2,
    "editor.formatOnPaste": true,
    "editor.colorDecorators": false,
    "editor.renderIndentGuides": false,
    "editor.snippetSuggestions": "top",
    "editor.minimap.scale": 1,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": false
    },
    "editor.suggestSelection": "first",
    "editor.scrollbar.verticalScrollbarSize": 0,
    "editor.tokenColorCustomizations": {
        "strings": "#FFE792",
        "textMateRules": [{
                "name": "default color",
                "scope": [
                    "variable",
                    "variable.other",
                    "variable.name",
                    "variable.other.constant"
                ],
                "settings": {
                    "foreground": "#eeeeee",
                    "fontStyle": ""
                }
            },{
                "name": "includes parathesis",
                "scope": "punctuation",
                "settings": {
                    "foreground": "#888888"
                }
            }, {
                "scope": "meta.function-call entity.name.function",
                "settings": {
                    "foreground": "#75ade0"
                }
            }, {
                "scope": "entity.name.function",
                "settings": {
                    "foreground": "#99dd99"
                }
            }, {
                "scope": "variable.parameter",
                "settings": {
                    "foreground": "#f99157"
                }
            }, {
                "scope": "keyword.operator",
                "settings": {
                    "foreground": "#ffcc66"
                }
            }, {
                "scope": "entity.name",
                "settings": {
                    "foreground": "#75ade0"
                }
            }, {
                "name": "Object Literal",
                "scope": [
                    "meta.object-literal.key"
                ],
                "settings": {
                    "foreground": "#ffcc66"
                }
            }, {
                "scope": [
                    // "entity.name.label",
                    // "meta.function-call",
                    // "variable.function",
                    // "keyword.other.special-method",
                    // "support.function",
                    // "support.type",
                    // "support.class"
			],
                "settings": {
                    "foreground": "#F4878A"
                }
            }, {
                "name": "italic font",
                "scope": [
                    "comment",
                    "keyword",
                    "storage",
                    "keyword.control.import",
                    "keyword.control.default",
                    "keyword.control.from",
                    "keyword.operator.new",
                    "keyword.control.export",
                    "keyword.control.flow",
                    "storage.type.class",
                    "storage.type.function",
                    "storage.type",
                    "storage.type.class",
                    "variable.language",
                    "variable.language.super",
                    "variable.language.this",
                    "meta.class",
                    "meta.var.expr",
                    "constant.language.null",
                    "support.type.primitive",
                    "entity.name.method.js",
                    "entity.other.attribute-name",
                    "punctuation.definition.comment",
                    "text.html.basic entity.other.attribute-name.html",
                    "text.html.basic entity.other.attribute-name",
                    "tag.decorator.js entity.name.tag.js",
                    "tag.decorator.js punctuation.definition.tag.js",
                    "source.js constant.other.object.key.js string.unquoted.label.js",
                ],
                "settings": {
                    // "fontStyle": "normal",
                }
            }
        ]
    },
    "workbench.iconTheme": "vscode-icons",
    "workbench.tree.indent": 16,
    "workbench.colorCustomizations": {
        "editor.selectionBackground": "#f991577f",
        "editor.inactiveSelectionBackground": "#f991574f",
        "editor.selectionHighlightBorder": "#f991578f",
        "editor.selectionHighlightBackground": "#ffffff00",
        "editorBracketMatch.border": "#f991578f",
        "editor.background": "#222222",
        "editorGutter.background": "#222222",
        "list.hoverForeground": "#f99157",
        "list.hoverBackground": "#00000000",
        "list.inactiveSelectionForeground": "#f99157",
        "activityBar.background": "#222222",
        "sideBar.background": "#222222",
    },


    /* ----------- crypto watcher ----------- */
    // Specify the refresh interval in seconds
    "crypto-ticker.interval": 60,
    // Specify the opening period
    "crypto-ticker.period": "24HOUR",
    // Customize your high and low colors to suite your status bar
    "crypto-ticker.higherColor": "white",
    "crypto-ticker.lowerColor": "white",
    // Customize your tickers
    "crypto-ticker.tickers": [
        {
            // The base cryptocurrency symbol
            "symbol": "BTC",
            // The comparison currency symbol
            "currency": "USD",
            // The cryptocurrency exchange
            // "exchange": "Coinbase",
            // Create a custom ticker template
            "template": "{price}"
        }, {
            "symbol": "EOS",
            "currency": "USD",
            "template": "{price}"
        }, {
            "symbol": "BCH",
            "currency": "USD",
            "template": "{price}"
        }, {
            "symbol": "ETH",
            "currency": "USD",
            "template": "{price}"
        }, {
            "symbol": "ATOM",
            "currency": "USD",
            "template": "{price}"
        }
    ],
     
    /* ----------- eslint ----------- */
    "eslint.run": "onSave",
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescriptreact"
    ],
    "eslint.options": {
        "extensinons": [
            ".ts",
            ".js",
            ".tsx",
            ".jsx"
        ]
    },
    

    /* ----------- preview features ----------- */
    "timeline.showView": true,
    "search.enableSearchEditorPreview": true,
    "explorer.confirmDelete": false,
    "editor.semanticHighlighting.enabled": false,
    "workbench.colorTheme": "Î²ui - Eighties Dark",
    "[python]": {},
    "terminal.integrated.shell.linux": "/bin/bash",
    "cSpell.userWords": [
        "lovem",
        "taobao"
    ],
    "liveshare.anonymousGuestApproval": "accept",
    "explorer.confirmDragAndDrop": false,

}