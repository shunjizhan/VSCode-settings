{
    "gitlens.advanced.messages": {
        "suppressGitVersionWarning": true
    },
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "typescript.validate.enable": false,
    "window.zoomLevel": 0,
    "files.associations": {
        "*.js": "typescriptreact",
        "*.jsx": "typescriptreact",
        "*.erb": "erb"
    },
    "vsicons.dontShowNewVersionMessage": true,

    // these doesn't seem to work
    "typescriptreact.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBrackets": false,
    "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBrackets": false,
    "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBrackets": false,


    /* ----------- editor ----------- */
    "editor.fontSize": 13,
    // "editor.fontFamily": "monaco",
    // "editor.fontFamily": "consolas",
    // "editor.fontFamily": "Fira Code",
    // "editor.fontFamily": "FiraCode-Retina",
    // "editor.fontFamily": "Inconsolata",
    // "editor.fontFamily": "ubuntu mono",
    // "editor.fontFamily": "source code pro",
    // "editor.fontFamily": "mononoki",
    // "editor.fontFamily": "Operator Mono Lig",
    "editor.fontFamily": "Operator Mono SSm Lig",
    "editor.fontLigatures": true,
    "editor.wordWrap": "on",
    "editor.showFoldingControls": "always",
    "editor.tabSize": 2,
    "editor.formatOnPaste": true,
    "editor.colorDecorators": false,
    "editor.renderIndentGuides": false,
    "editor.snippetSuggestions": "top",
    "editor.minimap.scale": 1,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": false
    },
    "editor.suggestSelection": "first",
    "editor.scrollbar.verticalScrollbarSize": 0,
    "editor.tokenColorCustomizations": {
        "strings": "#FFE792",
        "textMateRules": [
            {
                "name": "default color",
                "scope": [
                    "meta.import variable.other",       // variables from import statement
                    "variable.other.object.property",   // the 'x' in obj.x
                    "variable.other.property"           // the 'x' in obj.x
                ],
                "settings": {
                    "foreground": "#D4D1C9",
                }
            }, {
                "name": "dim symbols",
                "scope": [
                    "punctuation",                           // ", '
                    "punctuation.separator",                 // ,
                    "punctuation.section.embedded.begin",    // {
                    "punctuation.section.embedded.end",      // }
                    "punctuation.terminator.statement",      // ;
                ],
                "settings": {
                    "foreground": "#888888"
                }
            }, {
                "name": "function call",
                "scope": [
                    "meta.function-call entity.name.function",
                ],
                "settings": {
                    "foreground": "#75ade0"
                }
            }, {
                "name": "react component call",
                "scope": "entity.name.tag support.class.component",
                "settings": {
                    "foreground": "#F4878A"
                }
            }, {
                "name": "function definition",
                "scope": "entity.name.function",
                "settings": {
                    "foreground": "#99dd99"
                }
            }, {
                "scope": "variable.parameter",
                "settings": {
                    "foreground": "#f99157"
                }
            }, {
                // "scope": "keyword.operator",
                "settings": {
                    "foreground": "#ffcc66"
                }
            }, {
                "name": "object key",
                "scope": "meta.object-literal.key",
                "settings": {
                    "foreground": "#ffcc66"
                }
            }, {
                "name": "red keywords",
                "scope": [
                        "storage.modifier",     // extends
                        "constant.language",    // null
			        ],
                "settings": {
                    "foreground": "#F4878A"
                }
            }, {
                "name": "don't use italic font",
                "scope": [
                    "comment",
                    "storage.type.function",        // function
                    "meta.var storage.type",        // const, let
                    "keyword.control.from",         // from
                    "storage.modifier",             // extends
                    "variable.language",            // this
                    "entity.other.attribute-name",  // component call attributes
                ],
                "settings": {
                    "fontStyle": "",
                }
            }
        ]
    },
    "workbench.iconTheme": "vscode-icons",
    "workbench.tree.indent": 16,
    "workbench.colorCustomizations": {
        "editor.selectionBackground": "#f991577f",
        "editor.inactiveSelectionBackground": "#f991574f",
        "editor.selectionHighlightBorder": "#f991578f",
        "editor.selectionHighlightBackground": "#ffffff00",
        "editorBracketMatch.border": "#f991578f",
        "editor.background": "#222222",
        "editorGutter.background": "#222222",
        "list.hoverForeground": "#f99157",
        "list.hoverBackground": "#00000000",
        "list.inactiveSelectionForeground": "#f99157",
        "activityBar.background": "#222222",
        "sideBar.background": "#222222",
    },


    /* ----------- crypto watcher ----------- */
    // Specify your CryptoCompare API key
    "crypto-ticker.apiKey": "429f251416e2e2c5f4280f9bd18b8214db0afb763889e602ebcca103dd6a5dfa",
    // Specify the refresh interval in seconds
    "crypto-ticker.interval": 60,
    // Specify the opening period
    "crypto-ticker.period": "24HOUR",
    // Customize your high and low colors to suite your status bar
    "crypto-ticker.higherColor": "white",
    "crypto-ticker.lowerColor": "white",
    // Customize your tickers
    "crypto-ticker.tickers": [
        {
            // The base cryptocurrency symbol
            "symbol": "BTC",
            // The comparison currency symbol
            "currency": "USD",
            // The cryptocurrency exchange
            // "exchange": "Coinbase",
            // Create a custom ticker template
            "template": "{price}"
        }, {
            "symbol": "EOS",
            "currency": "USD",
            "template": "{price}"
        }, {
            "symbol": "BCH",
            "currency": "USD",
            "template": "{price}"
        }, {
            "symbol": "ETH",
            "currency": "USD",
            "template": "{price}"
        }, {
            "symbol": "ATOM",
            "currency": "USD",
            "template": "{price}"
        }
    ],
     
    /* ----------- eslint ----------- */
    "eslint.run": "onSave",
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescriptreact"
    ],
    "eslint.options": {
        "extensinons": [
            ".ts",
            ".js",
            ".tsx",
            ".jsx"
        ]
    },
    

    /* ----------- preview features ----------- */
    "timeline.showView": true,
    "search.enableSearchEditorPreview": true,
    "explorer.confirmDelete": false,
    "editor.semanticHighlighting.enabled": false,
    "workbench.colorTheme": "Î²ui - Eighties Dark",
    "[python]": {},
    "terminal.integrated.shell.linux": "/bin/bash",
    "cSpell.userWords": [
        "lovem",
        "taobao"
    ],
    "liveshare.anonymousGuestApproval": "accept",
    "explorer.confirmDragAndDrop": false,

}