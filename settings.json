{
    "typescript.validate.enable": false,
    "window.zoomLevel": 0,
    "files.associations": {
        "*.js": "typescriptreact",
        "*.jsx": "typescriptreact"
    },
    "vsicons.dontShowNewVersionMessage": true,

    "editor.fontSize": 13,
    "editor.fontFamily": "Monaco",
    "editor.wordWrap": "on",
    "editor.showFoldingControls": "always",
    "editor.tabSize": 4,
    "editor.formatOnPaste": true,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.snippetSuggestions": "top",

    "workbench.iconTheme": "vscode-icons","workbench.tree.indent": 16,
    "workbench.colorCustomizations": {
        "editor.selectionBackground": "#f991577f",
        "editor.inactiveSelectionBackground": "#f991574f",

        "editor.selectionHighlightBorder": "#f991578f",
        "editor.selectionHighlightBackground": "#ffffff00",

        "editorBracketMatch.border": "#f991578f",
        
        "editor.background": "#222222",
        "editorGutter.background": "#222222",

        "list.hoverForeground": "#f99157",
        "list.hoverBackground": "#00000000",
        "list.inactiveSelectionForeground": "#f99157",
    },

    "editor.tokenColorCustomizations": {
        "strings": "#FFE792",
        "textMateRules": [{
                "name": "default color",
                "scope": [
                    "variable",
                    "variable.other",
                    "variable.name",
                    "variable.other.constant"
                ],
                "settings": {
                    "foreground": "#eeeeee",
                    "fontStyle": ""
                }
            },{
                "name": "includes parathesis",
                "scope": "punctuation",
                "settings": {
                    "foreground": "#888888"
                }
            }, {
                "scope": "meta.function-call entity.name.function",
                "settings": {
                    "foreground": "#71A1D0"
                }
            }, {
                "scope": "entity.name.function",
                "settings": {
                    "foreground": "#99cc99"
                }
            }, {
                "scope": "variable.parameter",
                "settings": {
                    "foreground": "#f99157"
                }
            }, {
                "scope": "keyword.operator",
                "settings": {
                    "foreground": "#ffcc66"
                }
            }, {
                "scope": "entity.name",
                "settings": {
                    "foreground": "#71A1D0"
                }
            }, {
                "name": "Object Literal",
                "scope": [
                    "meta.object-literal.key"
                ],
                "settings": {
                    "foreground": "#FFE792"
                }
            }, {
                "scope": [
                    // "entity.name.label",
                    // "meta.function-call",
                    // "variable.function",
                    // "keyword.other.special-method",
                    // "support.function",
                    // "support.type",
                    // "support.class"
			],
                "settings": {
                    "foreground": "#F4878A"
                }
            }
        ]
    },



    /* ----------- crypto watcher settings ----------- */
    // Specify the refresh interval in seconds
    "crypto-ticker.interval": 60,
    // Specify the opening period
    "crypto-ticker.period": "24HOUR",
    // Customize your high and low colors to suite your status bar
    "crypto-ticker.higherColor": "white",
    "crypto-ticker.lowerColor": "white",
    // Customize your tickers
    "crypto-ticker.tickers": [{
            // The base cryptocurrency symbol
            "symbol": "BTC",
            // The comparison currency symbol
            "currency": "USD",
            // The cryptocurrency exchange
            // "exchange": "Coinbase",
            // Create a custom ticker template
            "template": "{price}"
        }, {
            "symbol": "EOS",
            "currency": "USD",
            "template": "{price}"
        }, {
            "symbol": "ATOM",
            "currency": "USD",
            "template": "{price}"
        }, {
            "symbol": "BCH",
            "currency": "USD",
            "template": "{price}"
        }, {
            "symbol": "XRP",
            "currency": "USD",
            "template": "{price}"
        },
    ],
    "workbench.colorTheme": "Î²ui - Eighties Dark",
    "explorer.confirmDragAndDrop": false,
    
}